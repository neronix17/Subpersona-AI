<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef>
		<defName>O21_AI_ShellPawnMaker</defName>
		<label>subpersona shell</label>
		<description>Creates a subpersona shell.</description>
		<thingClass>Building</thingClass>

		<graphicData>
			<texPath>Things/Alpha</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>

		<statBases>
			<WorkToMake>550</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0.1</Flammability>
		</statBases>

		<comps>
			<li Class="O21Toolbox.CompProperties_PawnSpawner">
				<pawnKind>O21_AI_CraftedSubpersonaShell</pawnKind>
				<newborn>True</newborn>
				<canGeneratePawnRelations>False</canGeneratePawnRelations>
			</li>
		</comps>

		<size>(1,1)</size>
		<category>Building</category>
		<pathCost>200</pathCost>
		<passability>Standable</passability>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<filthLeaving>Filth_RubbleRock</filthLeaving>
		<hasInteractionCell>false</hasInteractionCell>
		<drawerType>MapMeshAndRealTime</drawerType>
		<altitudeLayer>Building</altitudeLayer>
		<repairEffect>Repair</repairEffect>
		<useHitPoints>True</useHitPoints>
		<selectable>true</selectable>
		<surfaceType>Item</surfaceType>
		<tickerType>Normal</tickerType>
	</ThingDef>

	<RecipeDef>
		<defName>O21_AI_CreateSubpersonaShell</defName>
		<label>create subpersona shell</label>
		<description>Create a subpersona shell.</description>
		<jobString>Building a better bot.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workAmount>2400</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>240</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>Plasteel</li>
				<li>ComponentSpacer</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<O21_AI_ShellPawnMaker>1</O21_AI_ShellPawnMaker>
		</products>
		<researchPrerequisite>O21_AI_SubpersonaShell</researchPrerequisite>
	</RecipeDef>

	<PawnKindDef>
		<defName>O21_AI_CraftedSubpersonaShell</defName>
		<label>subpersona shell</label>
		<race>O21_AI_SubpersonaShell</race>
		<combatPower>40</combatPower>
		<baseRecruitDifficulty>0.50</baseRecruitDifficulty>
		<isFighter>false</isFighter>
		<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
		<forceNormalGearQuality>true</forceNormalGearQuality>
		<defaultFactionType>PlayerColony</defaultFactionType>
		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>SubpersonaShellBackstory</li>
				</categories>
			</li>
		</backstoryFiltersOverride>
		<apparelTags Inherit="false" />
		<apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
		<apparelMoney>
			<min>0</min>
			<max>0</max>
		</apparelMoney>
		<techHediffsChance>0.0</techHediffsChance>
		<techHediffsMoney>
			<min>0</min>
			<max>0</max>
		</techHediffsMoney>
		<techHediffsTags Inherit="false" />
		<initialWillRange>0</initialWillRange>
		<initialResistanceRange>30~40</initialResistanceRange>
		<modExtensions>
			<li Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind">
				<flattenSkills>True</flattenSkills>
				<clearPassions>True</clearPassions>
				<clearApparel>True</clearApparel>
			</li>
		</modExtensions>
	</PawnKindDef>

</Defs>